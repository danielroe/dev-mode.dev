{
  "name": "dev-mode",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": {
    "name": "Daniel Roe",
    "email": "daniel@roe.dev",
    "url": "https://roe.dev"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "lint": "eslint .",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && simple-git-hooks",
    "test:types": "vue-tsc --noEmit",
    "test:unit": "vitest",
    "test:nuxt": "vitest -c vitest.nuxt.config.ts",
    "test:browser": "playwright test test/browser",
    "test:browser:update": "docker run --rm --network host -v $(pwd):/work/ -v /tmp/playwright-node-modules:/work/node_modules -w /work/ -it mcr.microsoft.com/playwright:v1.51.1-noble bash -c 'corepack enable && pnpm i && pnpm playwright test test/browser --update-snapshots'"
  },
  "dependencies": {
    "@nuxt/eslint": "^1.3.0",
    "@nuxt/fonts": "^0.11.0",
    "@nuxt/image": "^1.10.0",
    "@nuxt/scripts": "^0.11.5",
    "@nuxtjs/html-validator": "^2.1.0",
    "@vueuse/nuxt": "13.9.0",
    "@vueuse/sound": "^2.1.3",
    "nuxt": "^3.16.1",
    "nuxt-og-image": "^5.1.1",
    "nuxt-time": "^1.0.3",
    "unplugin-vue-router": "^0.15.0",
    "vue": "^3.5.0",
    "vue-sonner": "^2.0.0"
  },
  "devDependencies": {
    "@nuxt/test-utils": "3.19.2",
    "@playwright/test": "1.55.0",
    "@vue/test-utils": "2.4.6",
    "eslint": "9.35.0",
    "happy-dom": "18.0.1",
    "lint-staged": "16.1.6",
    "simple-git-hooks": "2.13.1",
    "typescript": "5.9.2",
    "vitest": "3.2.4",
    "vue-tsc": "3.0.7"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,json,.*rc}": [
      "npx eslint --fix"
    ]
  },
  "packageManager": "pnpm@10.17.0"
}
